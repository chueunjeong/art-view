<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
             "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="skhu.artview.mapper.UserMapper">

  <select id="findOne" resultType="User">
    SELECT * FROM user WHERE id = #{id}
  </select>
  
  <select id="findOneByLoginId" resultType="User">
  	SELECT * FROM user WHERE login_id = #{login_id}
  </select>
  
  <select id="findAll" resultType="User">
    SELECT  *
    FROM user 
  </select>
  
  <select id="findAges" resultType="Age">
    SELECT  *
    FROM Age
  </select>

  <insert id="insert" useGeneratedKeys="true" keyProperty="id">
    INSERT user (fav_artfield_id, login_id, pwd, name, phone, email, age)
    VALUES (#{fav_artfield_id}, #{login_id}, #{pwd}, #{name}, #{phone}, #{email}, #{age})
  </insert>

<insert id="saveNormal" useGeneratedKeys="true" keyProperty="id">
    INSERT user (login_id, pwd, name, phone, email,age)
    VALUES (#{login_id}, #{pwd}, #{name}, #{phone}, "",#{age})
  </insert>

  <delete id="delete">
    DELETE FROM User WHERE id = #{id}
  </delete>

</mapper>
