<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
             "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="skhu.artview.mapper.GroupingMapper">

  <select id="findOne" resultType="Grouping">
    SELECT * FROM grouping WHERE id = #{id}
  </select>
  
  <select id="findOneByProject_id" resultType="Grouping">
  	SELECT * FROM grouping project_id = #{project_id}
  </select>
  
  <select id="findOneByArtist_id" resultType="Grouping">
  	SELECT * FROM grouping artist_id = #{artist_id}
  </select>
  
  <select id="findOneByDistrict_id" resultType="Grouping">
  	SELECT * FROM grouping district_id = #{district_id}
  </select>
  
  <select id="findAll" resultType="Grouping">
    SELECT  *
    FROM grouping 
  </select>
  
  

  <insert id="insert" useGeneratedKeys="true" keyProperty="id">
    INSERT grouping ( grouping_id, artist_id)
    VALUES (#{grouping_id}, #{artist_id})
  </insert>


  <delete id="delete">
    DELETE FROM grouping WHERE id = #{id}
  </delete>

</mapper>
